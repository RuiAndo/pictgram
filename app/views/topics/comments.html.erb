<div class="new_content_wrapper">
  <div class="container">
    <div class="topic-index-single center-block">
      <h2 class="topic-author"><%= @topic.user.name %></h2>
      <%= image_tag(@topic.image.url) %>
      <p class="topic-text"><%= @topic.description %></p>
      <% if @topic.comments.count > 0 %>
        <p class="comment-text">コメント</p>
        <% @topic.comments.each do |comment| %>
          <ul>
            <li><%= comment.comment %></li>
          </ul>
        <% end %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :comment, "コメント" %>
            <%= f.text_area :comment, class: "form-control" %>
          </div>
          <%= hidden_field_tag :topic_id, @topic.id %>
          <%= f.submit "投稿する", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
